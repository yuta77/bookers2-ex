<%= form_for(user) do |f| %>

  <div class="field row">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: "col-xs-12 name" %>
  </div>

  <div class="field row">
    <%= f.label :image %>
    <%= f.attachment_field :profile_image, class: "col-xs-12 user_image" %>
  </div>

  <div class="field row">
    <%= f.label :introduction %>
    <%= f.text_area :introduction, class: "col-xs-12 introduction" %>
  </div>

  <!-- postcode -->
  <div class="field row">
    <%= f.label :postcode %>
    <%= f.text_field :postcode, autocomplete: "postcode", class: "col-xs-12", id: "address_zipcode" %>
  </div>

  <!-- prefecture code -->
  <div class="field row">
    <%= f.label :prefecture_code %><br />
    <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name %>
  </div>

  <!-- address city -->
  <div class="field row">
    <%= f.label :address_city %>
    <%= f.text_field :address_city, autocomplete: "address_city", class: "col-xs-12", id: "address_city" %>
  </div>

  <!-- address street -->
  <div class="field row">
    <%= f.label :address_street %>
    <%= f.text_field :address_street, autocomplete: "address_street", class: "col-xs-12", id: "address_street" %>
  </div>

  <!-- address building -->
  <div class="field row">
    <%= f.label :address_building %>
    <%= f.text_field :address_building, autocomplete: "address_building", class: "col-xs-12", id: "address_building" %>
  </div>

  <div class="actions row">
    <%= f.submit class: "btn btn-primary col-xs-12" %>
  </div>

<% end %>
