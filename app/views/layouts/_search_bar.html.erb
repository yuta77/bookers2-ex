<% if user_signed_in? %>
  <% choices = [
    ["部分一致", "partial"],
    ["完全一致", "exact"],
    ["前方一致", "forward"],
    ["後方一致", "backward"]
  ] %>
  <div class="row form-group">
    <%= form_with url: search_path, method: :get, local: true do |f| %>
      <%= f.text_field :str %>
      <%= f.select :path, [["Book", "books"], ["User", "users"]] %>
      <%= f.select :type, choices, selected: "partial" %>
      <%= f.submit 'Search', :name => nil %>
    <% end %>
  </div>
<% end %>